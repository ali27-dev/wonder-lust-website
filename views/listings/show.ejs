<% layout("/layouts/boilerplates") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h2><b><%= listId.title %></b> </h2>
    </div>

    <div class="card col-6 offset-3 show-card">
      <img
        src="<%= listId.image %>"
        class="card-img-top show-image"
        alt="Listing image"
      />
      <div class="card-body">
        <div class="card-text">
          
          <%= listId.description%> <br />
  &#8360;<%= listId.price ? listId.price.toLocaleString("en-PK") : "N/A" %> / night <br />
          <%= listId.country%> <br />
          <%= listId.location%> <br />
        </p>
      </div>
    </div>
    <div class="btns">
      <a
        href="/listings/<%= listId._id %>/edit"
        class="btn btn-dark edit-btn"
        >Edit</a
      >

      <form method="post" action="/listings/<%= listId._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>

      <a href="/listings" class="btn btn-dark offset-1">Go Back</a>
    </div>
  </div>
  <!-- Review-section -->
  <div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listId.id %>/reviews" method="post">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating:</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment:</label>
          <textarea  id="comment" class="form-control" name="review[comment]" cols="300" rows="5"></textarea>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</body>
