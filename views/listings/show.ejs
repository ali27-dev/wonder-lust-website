<% layout("/layouts/boilerplates") %>
<body>
  <!-- view-listing-section -->
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h2><b><%= listId.title %></b> </h2>
    </div>

    <div class="card col-6 offset-3 show-card card-listing">
      <img
        src="<%= listId.image %>"
        class="card-img-top show-image"
        alt="Listing image"
      />
      <!-- Card-details -->
      <div class="card-body mb-3">
        <p class="card-text">Owned By <%= listId.owner.username%></p>
        <p class="card-text"><%= listId.description%></p>
        <p class="card-text">&#8360;<%= listId.price ? listId.price.toLocaleString("en-PK") : "N/A" %> / night </p>
        <p class="card-text"> <%= listId.country%> </p>
        <p class="card-text"> <%= listId.location%> </p>
    </div>

    <!-- Edit-btn-->
     <!-- Implementing-Authorization -->
    <% if(currUser && listId.owner._id.equals(currUser._id)){ %>
    <div class="btns">
      <a
        href="/listings/<%= listId._id %>/edit"
        class="btn btn-dark edit-btn"
        >Edit</a
      >
    <!-- Delete-btn = to delete the listing-->
      <form method="post" action="/listings/<%= listId._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
<% } %>
    <!-- back-btn -->
      <a href="/listings" class="btn btn-dark offset-1">Go Back</a>
    </div>

  </div>

  <!-- Review-section -->
  <div class="col-8 offset-3 mb-3">
    <hr>

    <!-- Implementing-Authorization -->
    <% if(currUser){ %>
    <h4>Leave a Review</h4>
    <!-- Add-Review-form-start -->
    <form action="/listings/<%= listId.id %>/reviews" method="post" novalidate class="needs-validation">
      <!-- stariblity -->
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating:</label>
        <fieldset class="starability-slot">
           <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
           <label for="first-rate1" title="Terrible">1 star</label>

          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
       </fieldset>
    </div> 
        <!-- staribility-end -->

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment:</label>
          <textarea  id="comment" class="form-control" name="review[comment]" cols="300" rows="5" required ></textarea>
        <!-- Validation-Success And Failure-Text -->
          <div class="invalid-feedback">Please add commet!</div>
          <div class="valid-feedback">Comment is looks Good!</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <!-- Add-Review-form-End -->
<% } %>

        <!-- All-Reviews -->
    <p><b>All Reviews</b></p>
      <div class="row">
        <% for(let review of listId.reviews) {%>
        <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
        <h5 class="card-title"><%= review.author.username %></h5>
        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
        <p class="card-text"><%= review.comment %></p>
      </div>
          <!-- review-delete-btn-start -->
   <form action="/listings/<%= listId._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
    <!-- Implementing-Authorization -->
      <% if(currUser && review.author._id.equals(currUser. _id)){ %>
       <button class="btn btn-sm btn-dark mt-3">Delete</button>
    <% } %>
  </form>
  <!-- review-delete-btn-end -->
  </div>
   <% } %>
   </div>
  </div>
</body>