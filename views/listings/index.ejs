<% layout("/layouts/boilerplates")%>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 1.5rem;
    margin-top: 1rem;
    opacity: 0.7;
  }
  .filter:hover {
    opacity: 1;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .info-tex{
    display: none;
  }
  .toggle-switch{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: 2rem;
  }
</style>
<!-- iconsPannel-start -->
<div id="filters">
  <div class="filter">
    <div class=""><i class="fa-solid fa-fire"></i></div>
    <p>Tranding</p>
  </div>
  <div class="filter">
    <div class=""><i class="fa-solid fa-restroom"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div class=""><i class="fa-solid fa-mountain"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div class=""><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountain city</p>
  </div>
  <div class="filter">
    <div class="">
      <i class="fa-solid fa-chess-rook"></i></div>
      <p>Castle</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
  <div class="filter">
    <div class=""><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div class=""><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </div>
    <div class="filter">
      <div class=""><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>

    <!-- toggle-switch -->
    <div class="toggle-switch">
        <div class="form-check-reverse form-switch">
         <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
        </div>
      </div>
  </div>
  <!-- iconsPannel-end -->

  <!-- Listings-div-start -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let list of listing){ %>
    <a href="/listings/<%= list._id%>" class="card-img-link">
      <div class="card card-listing">
        <img
          src=" <%= list.image.url%> "
          style="height: 20rem"
          class="card-img-top"
          alt="Listing image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><%= list.title%></p>
          <p class="card-text">
            &#8360;<%= list.price ? list.price.toLocaleString("en-PK") : "N/A"
            %> / night <i class="info-tex">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <%}%>
  </div>
</div>

<script>
  const toggleSwitch = document.getElementById("switchCheckDefault");
  toggleSwitch.addEventListener("click", ()=> {

   let infoTex = document.getElementsByClassName("info-tex")
   
   for (info of infoTex) {
    if (info.style.display != "inline") {
      info.style.display = "inline";
    } else {
      info.style.display = "none";
    }
   }
  })
</script>