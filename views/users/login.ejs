<%- layout("/layouts/boilerplates") %>
<body>
  <div class="row mt-3">
    <div class="col-6 offset-3">
      <h2>Log In</h2>
      <!-- Form -->
      <form method="post" action="/login" novalidate class="needs-validation">
        <!-- Username-input -->
        <div class="mb-3">
          <label for="username" class="form-label">Username:</label>
          <input
            type="text"
            placeholder="Add username"
            name="username"
            id="username"
            class="form-control"
            required
          />
        </div>
        <!-- Password-input -->
        <div class="mb-3">
          <label for="password" class="form-label">Password:</label>
          <input
            type="password"
            placeholder="Add password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <!-- Button -->
        <button class="btn btn-success">Log In</button>
      </form>
    </div>
  </div>
</body>
